<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">


    <changeSet author="dorogokupets" id="create-direction-table">
        <createTable tableName="directions" schemaName="cvservice">
            <column name="id_direction" type="integer" valueComputed="nextval('direction_sequence')">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
            <column name="description" type="text"/>
        </createTable>
    </changeSet>

    <changeSet author="dorogokupets" id="create-candidates-table">
        <createTable tableName="candidates" schemaName="cvservice">
            <column name="id_candidate" type="integer" valueComputed="nextval('candidate_sequence')">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="first_name" type="VARCHAR(20)"/>
            <column name="last_name" type="VARCHAR(25)"/>
            <column name="patronymic" type="VARCHAR(30)"/>
            <column name="photo" type="text"/>              <!--fix -->
            <column name="description" type="text"/>
            <column name="cv_file" type="bytea"/>            <!--fix -->
            <column name="possible_directions" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="candidates" baseColumnNames="possible_directions"
                                 referencedTableName="directions" referencedColumnNames="id_direction"
                                 constraintName="direction_id_fk" baseTableSchemaName="cvservice"
                                 referencedTableSchemaName="cvservice"/>
    </changeSet>

    <changeSet author="dorogokupets" id="create-test-table">
        <createTable tableName="tests" schemaName="cvservice">
            <column name="id_test" type="integer" valueComputed="nextval('test_sequence')">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="title" type="text"/>
            <column name="description" type="text"/>
            <column name="direction_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="tests" baseColumnNames="direction_id"
                                 referencedTableName="directions" referencedColumnNames="id_direction"
                                 constraintName="direction_id_fk" baseTableSchemaName="cvservice"
                                 referencedTableSchemaName="cvservice"/>
    </changeSet>

    <changeSet author="dorogokupets" id="create-test-result-table">
        <createTable tableName="candidate_test_results" schemaName="cvservice">
            <column name="id_test_result" type="integer" valueComputed="nextval('test_result_sequence')">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="candidate_id" type="BIGINT"/>
            <column name="test_id" type="BIGINT"/>
            <column name="date" type="TIMESTAMP"/>
            <column name="mark" type="smallint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="candidate_test_results" baseColumnNames="candidate_id"
                                 referencedTableName="candidates" referencedColumnNames="id_candidate"
                                 constraintName="candidates_id_fk" baseTableSchemaName="cvservice"
                                 referencedTableSchemaName="cvservice"/>
        <addForeignKeyConstraint baseTableName="candidate_test_results" baseColumnNames="test_id"
                                 referencedTableName="tests" referencedColumnNames="id_test"
                                 constraintName="test_id_fk" baseTableSchemaName="cvservice"
                                 referencedTableSchemaName="cvservice"/>
    </changeSet>

</databaseChangeLog>
